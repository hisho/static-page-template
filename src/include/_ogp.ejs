<%# サイトの基本設定 %>
<%# サイトの種類 %>
<meta property="og:type" content="website">
<%# サイトの言語 %>
<meta property="og:locale" content="ja_JP">
<%# サイトのURl %>
<meta property="og:url" content="<%- site.url %>">
<%# サイトの名前 %>
<meta property="og:site_name" content="<%- site.name %>">
<%# 現在のページのタイトル %>
<meta property="og:title" content="<%- page.title %>">
<%# 現在のページのサムネイル画像 %>
<meta property="og:image" content="<%- site.url %>assets/img/screenshot.png">
<%# 現在のページの説明文 %>
<meta property="og:description" content="<%- page.description %>">

<%# Twitter関係 %>
<%# ツイッターカードの種類 %>
<meta name="twitter:card" content="<% if(ogp.twitter.card) { %><%- ogp.twitter.card %><% } %>">
<%# サイトのTwitterアカウントID %>
<meta name="twitter:site" content="<% if(ogp.twitter.site) { %><%- ogp.twitter.site %><% } %>">

<%# Facebook関係 %>
<%# サイトのFacebookのappID %>
<meta property="fb:app_id" content="<% if(ogp.facebook.app_id) { %><%- ogp.facebook.app_id %><% } %>">
<%# サイトのFacebookのユーザーID %>
<meta property="fb:admins" content="<% if(ogp.facebook.admins) { %><%- ogp.facebook.admins %><% } %>">

<%# サイトの連絡情報 %>
<%# メールアドレス %>
<meta property="og:email" content="<% if(ogp.contact.email) { %><%- ogp.contact.email %><% } %>">
<%# 電話番号 %>
<meta property="og:phone_number" content="<% if(ogp.contact.phone_number) { %><%- ogp.contact.phone_number %><% } %>">
<%# FAX番号 %>
<meta property="og:fax_number" content="<% if(ogp.contact.fax_number) { %><%- ogp.contact.fax_number %><% } %>">

<%# サイトの位置情報 %>
<%# 国名 %>
<meta property="og:country-name" content="<% if(ogp.location.country_name) { %><%- ogp.location.country_name %><% } %>">
<%# 都道府県 %>
<meta property="og:region" content="<% if(ogp.location.region) { %><%- ogp.location.region %><% } %>">
<%# 市区町村 %>
<meta property="og:locality" content="<% if(ogp.location.locality) { %><%- ogp.location.locality %><% } %>">
<%# 住所 %>
<meta property="og:street-address" content="<% if(ogp.location.street_address) { %><%- ogp.location.street_address %><% } %>">
<%# 郵便番号 %>
<meta property="og:postal-code" content="<% if(ogp.location.postal_code) { %><%- ogp.location.postal_code %><% } %>">
<%# 緯度 %>
<meta property="og:latitude" content="<% if(ogp.location.latitude) { %><%- ogp.location.latitude %><% } %>">
<%# 経度 %>
<meta property="og:longitude" content="<% if(ogp.location.longitude) { %><%- ogp.location.longitude %><% } %>">
